<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">


        <EditText
            android:id="@+id/editTextDistancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Distância percorrida"
            android:inputType="number"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/editTextConsumoMedio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Consumo médio do veículo"
            android:inputType="number"
            android:textSize="20sp" />

        <com.santalu.maskara.widget.MaskEditText
            android:id="@+id/editTextPrecoLitro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Preço por litro"
            android:inputType="number"
            android:textSize="20sp"
            app:mask="R$ _,__"
            app:maskCharacter="_"
            app:maskStyle="completable" />


        <TextView
            android:id="@+id/textResultadoHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonLimparHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Limpar"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonCalcularHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Calcular"
            android:textSize="20dp" />
    </LinearLayout>

</FrameLayout>